<%= link_to 'Edit task', edit_task_path, method: 'put' %>

<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
<input type="checkbox" checked>
  <p>Task is completed</p>
<% else %>
  <input type="checkbox">
  <p>Task is not done yet</p>
<% end %>

<%= link_to 'Back to list', tasks_path %>
