<h1>My tasks</h1>

<ul class="tasks">
  <% @tasks.each do |task| %>
    <li>
      <div class="task-detail">
        <%= link_to task.title, task_path(task) %>
        <p><%= task.details %></li></p>
        <input type="checkbox" <%= 'checked' if task.completed == true %>>
        <%= link_to 'Delete', destroy_task_path(task), method: 'delete' %>
      </div>
    </li>
  <% end %>
</ul>

<%= link_to 'New task', new_task_path %>
