<h1>My tasks</h1>

<ul class="tasks">
  <% @tasks.each do |task| %>
    <li>
      <div class="task-detail">
        <input type="checkbox" <%= 'checked' if task.completed == true %> disabled>
        <%= link_to task.title, task_path(task) %>
        <%= link_to destroy_task_path(task), method: 'delete' do  %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>

<%= link_to 'New task', new_task_path, class: 'btn btn-primary' %>
